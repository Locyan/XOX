<Window x:Class="XOX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XOX"
        mc:Ignorable="d"
        Name="XOXWindow"
        WindowStartupLocation="CenterScreen"
        Title="Tic-Tac-Toe" Height="450" Width="450">
    
    <UniformGrid Rows="3" Columns="3">        
        <Button Name="Btn1_1" Tag="1-1" Click="Click1_1" Background="White"></Button>
        <Button Name="Btn1_2" Tag="1-2" Click="Click1_2" Background="White"></Button>
        <Button Name="Btn1_3" Tag="1-3" Click="Click1_3" Background="White"></Button>
        <Button Name="Btn2_1" Tag="2-1" Click="Click2_1" Background="White"></Button>
        <Button Name="Btn2_2" Tag="2-2" Click="Click2_2" Background="White"></Button>
        <Button Name="Btn2_3" Tag="2-3" Click="Click2_3" Background="White"></Button>
        <Button Name="Btn3_1" Tag="3-1" Click="Click3_1" Background="White"></Button>
        <Button Name="Btn3_2" Tag="3-2" Click="Click3_2" Background="White"></Button>
        <Button Name="Btn3_3" Tag="3-3" Click="Click3_3" Background="White"></Button>
    </UniformGrid>
</Window>
